.mask {
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0,0,0,.6);
  z-index: 999;
  padding-bottom: 180rpx;
}
.modal-box {
  position: relative;
  width: 500rpx;
  height: 620rpx;
}
.modal-bg {
  display: block;
  width: 500rpx;
  height: 482rpx;
}
.modal-text {
  position: absolute;
  top: 308rpx;
  color: #fff;
  text-align: center;
  width: 500rpx;
  left: -14rpx;
}
.modal-desc {
  margin-bottom: 8rpx;
  font-weight: bold;
}
.modal-num {
  font-weight: bolder;
  font-size: 60rpx;
  color: #f0ff0a;
  display: flex;
  align-items: center;
  width: 500rpx;
  justify-content: center;
}
.modal-close {
  position: absolute;
  bottom: 0;
  left: 200rpx;
  width: 72rpx;
  height: 72rpx;
}