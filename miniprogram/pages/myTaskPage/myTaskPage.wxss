page {
  background: #f8f8f8;
}

.list {
  padding: 32rpx;
  min-height:  calc( 100vh - 112rpx );
}
.item {
  background: #fff;
  margin-bottom: 16rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 8rpx #ddd;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
}
.head-img {
  height: 120rpx;
  width: 120rpx;
  margin-right: 32rpx;
  flex-shrink: 0;
  border-radius: 60rpx;
}
.task-state {
  max-width: 180rpx;
  flex-shrink: 0;
  margin-left: 16rpx;
  text-align: right;
  font-size: 28rpx;
}
.task-info {
  flex:1;
  min-width: calc( 100vw - 476rpx );
  flex-shrink: 0;
}
.task-type {
  font-size: 28rpx;
  font-weight: bolder;
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #000;
}
.task-content {
  font-size: 24rpx;
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #666;
  
}
.task-num {
  margin: 8rpx 0;
  font-size: 24rpx;
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #666;
  display: flex;
  align-items: center;
}